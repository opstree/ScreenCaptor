{
	"name": "Screenshot Extension",
	"version": "1.0",
	"description": "A simple screenshot extension",
	"background": {
		"persistent": false,
		"scripts": ["background.js"]
	},
	"content_scripts": [
		{
			"matches" : ["http://*/*", "https://*/*"],
			"js": ["content.js"]
		}
	],
	"browser_action": {
		"default_icon": "camera.png",
		"default_title": "Screenshot"
	},
	"permissions": ["tabs", "activeTab"],
	"manifest_version": 2
}
